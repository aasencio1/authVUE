{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    "jsx": "preserve",
    "types": ["vite/client"],

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "useDefineForClassFields": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
